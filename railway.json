{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "/app/server",
        "healthcheckPath": "/api/status",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE"
    }
}